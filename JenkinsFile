pipeline
{
    agent any
    stages
    {
       stage("build & SonarQube analysis")
        {
            environment {
                scannerHome = tool 'SonarQubeScanner'
            }
            steps
            {
                withSoanrQubeEnv('sonar-1')
                {
                    sh "${scannerHome}/bin/sonar-scanner"
                }

            }
        }
        stage('Unit-Testing')
        {
            steps
            {
                sh 'mvn test'
            }
            post{
                always{
                    junit 'gameoflife-core/target/surefire-reports/*.xml'
                }
            }
        }
    }
}