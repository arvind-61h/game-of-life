pipeline{
    agent {label 'master'}
    stages{
        stage('SCM-Checkout'){
            steps{
                git 'https://github.com/arvind61h/spring-petclinic.git'
            }
        }
        stage('Unit-Testing'){
            steps{
                sh 'mvn test'
            }
        }
        stage('Publishing-Junit-Test'){
            steps{
                  step([$class: 'JUnitResultArchiver', testResults: 'target/surefire-reports/*.xml.'])
            }
        }
        stage('Build'){
            steps{
                sh 'mvn package install'
            }
        }
        stage('Code-Analysis'){
            steps{
                withSonarQube('MysonarQube'){
                    sh 'mvn sonar:sonar'
                }
            }
        }
    }
    post
    {
        success
        {
            steps
            {
                 rtUpload(
                    serverId: 'Artifactory-1',
                    spec:'''{
                          "files":
                          [
                            {
                              "pattern": "/*.jar",
                              "target": "libs-snapshot-local/"
                            }
                          ]
                    }''',
                 )


            }

        }
    }
}
