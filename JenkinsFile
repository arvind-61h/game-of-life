pipeline
{
    agent any
    stages
    {
        stage('Build and Packaging ')
        {
            steps
            {
                sh 'mvn clean package'

            }
            post{
                success{
                    archiveArtifacts artifacts: '**/*.jar, **/*.war', followSymlinks: false
                }
            }
        }
        stage('Unit-Testing')
        {
            steps
            {
                sh 'mvn test'
            }
            post{
                always{
                    junit 'gameoflife-core/target/surefire-reports/*.xml'
                }
            }
        }
        stage('Code-Analysis')
        {
            steps
            {
                withSonarQubeEnv('sonar1')
                {
                    sh 'mvn sonar:sonar'
                }
            }
        }
    }
}