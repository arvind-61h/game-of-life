pipeline
{
    agent any
    stages
    {
        stage('Build and Packaging ')
        {
            steps
            {
                sh 'mvn clean package'

            }
        }
        stage('Unit-Testing')
        {
            steps
            {
                sh 'mvn test'
            }
            post{
                always{
                    junit 'gameoflife-core/target/surefire-reports/*.xml'
                }
            }
        }
        stage('Code-Analysis')
        {
            steps
            {
                withSoanrQubeEnv('sonar1')
                {
                    sh 'mvn sonar:sonar'
                }
            }
        }
    }
}