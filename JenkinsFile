pipeline
{
    agent any
    stages
    {
        stage('Build and Code Anaylisys ')
        {
            steps
            {
                 withSoanrQubeEnv('sonar1')
                {
                    sh 'mvn package org.sonarsource.scanner.maven:sonar-maven-plugin:3.7.0.1746:sonar'
                }

            }
        }
        stage('Unit-Testing')
        {
            steps
            {
                sh 'mvn test'
            }
            post{
                always{
                    junit 'gameoflife-core/target/surefire-reports/*.xml'
                }
            }
        }
    }
}