pipeline
{
    agent any
    stages
    {
        stage('Build, Packaging and Code Analysis ')
        {
            steps
            {
                withSoanrQubeEnv('mysonarQube')
                {
                    sh 'mvn clean package sonar:sonar'
                }

            }
        }
        stage('Unit-Testing')
        {
            steps
            {
                sh 'mvn test'
            }
            post{
                always{
                    junit 'gameoflife-core/target/surefire-reports/*.xml'
                }
            }
        }
    }
}